extends ../layout/main
block variable
  -
    var title_page = 'Інфраструктура'
    var id_page = 'infrastructure-page'
    var color = "dark"
    var decor = true

block meta
  title= 'Інфраструктура'
  meta(name='description', content='')
block head
  link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD9nfM9ITx5m84p5GxlRoXa24A6jBOFe3U&libraries=&v=weekly")
  script(src='./assets/scripts/index.js')
  script(src="./assets/scripts/infrastructure.js")

