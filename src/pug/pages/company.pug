          +img('company-img.png')
      .company__left-decor
          +img('two-leaflet.png')
      .company__decor.gs_reveal.gs_reveal-fs-left
          +img('group-leaflet.png')
    section.more.buy__more.section.gs_screen-trigger
      .more__leaflet.gs_reveal.gs_reveal-right
          +img('leaflet-big-promo.png').more__leaflet-img
      .container
          .more__wrap
              .more__title.gs_reveal.gs_reveal-title Хочете дізнатись більше?
              .more__list.gs_reveal.gs_reveal-opacity
                  .more__item
                      .more__img
                          .more__img-wrap
                              +img('more-img.png')
                          a(href="#").more__plus
                              .more__cross
